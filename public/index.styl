*
  -webkit-user-select none
  -webkit-text-size-adjust none
  -webkit-tap-highlight-color rgba(0,0,0,0)
:focus
  outline 0 none

html, body
  height 100%
html, body, h1, h2, h3, p, dl, dt, dd
  padding 0
  margin 0
body
  background #f9f8ea url(img/1-1.png) 50% -45px / 100% no-repeat
  padding-top 100px
  box-sizing border-box
  &[data-index="1"]
    background-position 50% -60px
    padding-top 80px
    #app
      background url('img/2-5.png') 50% 100% / 100% no-repeat
  &[data-index="2"]
    padding-top 30px
    background #f9f8ea url('img/3-0.png') 50% 0 / 100% no-repeat


#app
  height 100%
  overflow hidden
  text-align center
  font-family Helvetica, sans-serif
  line-height 2
  color #58479C
  dt
    color #41b0d8
  p
    font-size 12px
    color #41b0d8
  img
    margin auto
    padding 2px
    background #fff
    box-shadow 0 0 10px #829acf
    border-radius 5px
    max-width 90%
  section
    opacity 0
    position absolute
    -webkit-backface-visibility hidden
    -webkit-transform-style preserve-3d
    &.active
      -webkit-transition: all .5s ease
      opacity 1
      z-index 10
      width 100%
    a
      display inline-block
      padding 10px 1rem
      border-radius 5px
      text-decoration none
      color #fff
      background #41b0d8
    &.nav a
      margin 10px
      padding-left 2rem
      background #41b0d8 url('img/3-2.png') 5px 50% no-repeat
    &.form
      text-align left
      m=2rem
      h2
        margin 0 m
        color #fff
      h3
        text-align center
        margin-top 30%
        color #fff
        font-size 25px
      a
        margin-left m
      .field
        font-size 16px
        border-radius 5px
        border 2px solid #41b0d8
        background #fff
        margin 0 m 1rem
        padding 5px 10px
        input,textarea
          border 0 none
        textarea
          width 100%
          height 6rem
