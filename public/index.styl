kolor=#e59512

*
  -webkit-user-select none
  -webkit-text-size-adjust none
  -webkit-tap-highlight-color rgba(0,0,0,0)
:focus
  outline 0 none

html, body
  height 100%
html, body, h1, h2, h3, p, dl, dt, dd
  padding 0
  margin 0
body
  background #f9f8ea url(img/background.png) 0 0 / 100% repeat-y
  box-sizing border-box
  &[data-index="0"] #app
    background url('img/welcome.png') 50% 98% / 90% no-repeat
  &[data-index="1"]
    padding-top 10px
  &[data-index="2"]
    padding-top 30px


[hide]
  display none


#app
  height 100%
  overflow hidden
  text-align center
  font-family Helvetica, sans-serif
  line-height 2
  color #f7d37c
  img
    margin auto
    //padding 2px
    //background #fff
    //box-shadow 0 0 10px #829acf
    //border-radius 5px
    max-width 90%
  section
    width 100%
    opacity 0
    position absolute
    -webkit-backface-visibility hidden
    -webkit-transform-style preserve-3d
    &.active
      -webkit-transition: all .5s ease
      opacity 1
      z-index 10
    a
      display inline-block
      padding 10px 1rem
      border-radius 5px
      text-decoration none
      color #fff
    &.intro
      h1
        font-weight normal
        em
          display inline-block
          width 1em
    &.nav a
      margin-top 10px
      padding-left 2rem
      background #e59512 url('img/2-4.png') 5px 50% no-repeat
    &.form
      text-align left
      color kolor
      m=2rem
      h2
        margin 0 m
        color #fff
      h3
        text-align center
        margin-top 30%
        color #fff
        font-size 25px
      a
        margin-left m
        background kolor
      .field
        font-size 16px
        border-radius 5px
        border 2px solid kolor
        background #fff
        margin 0 m 1rem
        padding 5px 10px
        input,textarea
          border 0 none
        textarea
          width 100%
          height 6rem

.arrow
  img
    position absolute
    top 50%
    z-index 20
  .left
    left 0
  .right
    right 0
